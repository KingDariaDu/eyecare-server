<view class="container">
  <view class="user-info">
    <input placeholder="用户ID" value="{{id}}" bindinput="inputId"  class="input" />
    <view class="title">用户信息</view>
    <input placeholder="用户名" value="{{username}}" bindinput="inputUsername" class="input" />
    <input placeholder="真实姓名" value="{{name}}" bindinput="inputName" class="input" />
    <picker mode="selector" range="['男','女']" bindchange="changeGender">
      <view class="picker">性别: {{gender}}</view>
    </picker>
    <input placeholder="年龄" type="number" value="{{age}}" bindinput="inputAge" class="input" />
    <input placeholder="邮箱" value="{{email}}" bindinput="inputEmail" class="input" />
    <button type="primary" bindtap="updateUserInfo">保存修改</button>
  </view>
</view>